#!/usr/bin/env perl
use strict;
use warnings;
use FindBin qw($Bin);
use lib "$Bin/../lib";

# Internet check
use IO::Socket::INET;
unless (IO::Socket::INET->new(PeerAddr=>'8.8.8.8', PeerPort=>53, Proto=>'tcp', Timeout=>4)) {
    print "No internet connection â€” Ordo needs access to the server.\n";
    exit 1;
}

use App::Ordo::Runner;

my $runner = App::Ordo::Runner->new;
@ARGV ? $runner->run(@ARGV) : $runner->run_interactive;
