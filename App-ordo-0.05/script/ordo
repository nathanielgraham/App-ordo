#!/usr/bin/env perl
use strict;
use warnings;
use FindBin qw($Bin);
use lib "$Bin/../lib";
use App::ordo;

use IO::Socket::INET;

# Fast internet check
unless (IO::Socket::INET->new(PeerAddr=>'8.8.8.8', PeerPort=>53, Proto=>'tcp', Timeout=>4)) {
    print "No internet connection â€” Ordo requires access to the internet.\n";
    exit 1;
}

use App::ordo qw(one_shot_mode run_interactive_shell);

@ARGV ? one_shot_mode(@ARGV) : run_interactive_shell();
